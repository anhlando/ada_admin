{
  "kind": "collectionType",
  "collectionName": "customers",
  "info": {
    "singularName": "customer",
    "pluralName": "customers",
    "displayName": "Customer"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "uid": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "email": {
      "type": "email"
    },
    "fullname": {
      "type": "string"
    },
    "profilePictureUrl": {
      "type": "string"
    },
    "phone": {
      "type": "string",
      "regex": "\\d",
      "maxLength": 11,
      "minLength": 8
    },
    "dob": {
      "type": "date"
    },
    "accessToken": {
      "type": "string",
      "private": true
    },
    "iat": {
      "type": "string",
      "private": true
    },
    "scope": {
      "type": "enumeration",
      "enum": [
        "customer",
        "admin",
        "employee"
      ],
      "private": true
    }
  }
}
